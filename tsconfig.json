{
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es6", "dom"],
    "module": "es6",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    // `strict` enables noImplicitAny, noImplicitThis, alwaysStrict,
    // strictNullChecks and strictFunctionTypes at once
    "strict": true,
    "target": "es5",
    "pretty": true
  },
  "exclude": [
    "node_modules",
    "**/*-spec.ts"
  ]
}
